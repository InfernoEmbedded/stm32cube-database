<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<IP DBVersion="V4.0" IPType="peripheral" IpGroup="Multimedia" Name="I2S" Version="spi2s1_v2_1"
	xmlns:ns0="http://www.w3.org/2001/XMLSchema-instance"
	ns0:schemaLocation="http://mcd.rou.st.com/modules.php?name=mcu ../../../../../../../doc/V4/Development/Specifications/db/IP_Modes.xsd"
	xmlns="http://mcd.rou.st.com/modules.php?name=mcu">
	
	<!-- ModeLogicOperator for I2S -->
	<ModeLogicOperator Name="OR">
		<Mode Name="Mode">
			<ModeLogicOperator Name="XOR">
				<Mode Name="Half_Duplex_Master" UserName="Master">
					<SignalLogicalOp Name="AND">
						<Signal Name="SCK"/>
						<Signal Name="SD"/>
						<Signal Name="WS"/>
					</SignalLogicalOp>
					<Semaphore>$IpInstance_Master</Semaphore>
				</Mode>
				<Mode Name="Half_Duplex_Slave" UserName="Slave">
					<SignalLogicalOp Name="AND">
						<Signal Name="SCK"/>
						<Signal Name="SD"/>
						<Signal Name="WS"/>
					</SignalLogicalOp>
				</Mode>
			</ModeLogicOperator>
			<Semaphore>$IpInstance</Semaphore>
			<Condition Expression="!SPI$IpNumber" Diagnostic="SPI$IpNumber must be disabled"/>
		</Mode>
		
		<Mode Name="Master_Clock" UserName="Master Clock Output">
			<ModeLogicOperator Name="OR">
				<Mode Name="Master_Clock_Activated" UserName="Activated">
					<SignalLogicalOp Name="AND">
						<Signal Name="MCK"/>
					</SignalLogicalOp>
				</Mode>
			</ModeLogicOperator>
			<Condition Expression="$IpInstance_Master" Diagnostic="$IpInstance in Master Mode must be selected"/>
		</Mode>
	</ModeLogicOperator>
	
	<!-- RefSignal for I2S -->
	<RefSignal IOMode="GPIO" Name="SCK"/>
	<RefSignal IOMode="GPIO" Name="MCK"/>
	<RefSignal IOMode="GPIO" Name="SD"/>
	<RefSignal IOMode="GPIO" Name="WS"/>
</IP>
